                    <li>
                        <a href="http://sharepoint/sites/autopilot/wiki/Deployment.ini.aspx" target="_blank">Deployment.ini info</a>&nbsp;&nbsp;
                    </li>
                    <li>
                        <a href="http://sharepoint/sites/autopilot/wiki/Allocation.ini.aspx" target="_blank">Allocation.ini info</a>
                    </li>
</ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
